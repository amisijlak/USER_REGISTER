@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    ViewData["IsHomePage"] = true;
}

<style>
    h4,h3{
        margin-bottom:20px;
    }

    .card {
        margin: 15px;
    }

    .card>div:first-of-type{
        text-align:center;
    }

    .card .card-body{
        font-size:15px;
    }

    @@media (min-width:1080px){
        .card-body > p {
            height: 80px;
        }

        .card{
            width:30%;
            display:inline-block;
        }
    }

    .card-body>h5{
        margin-bottom:10px;
        text-decoration:underline;
    }
</style>

<div class="text-center">
    <figure class="figure">
        <img src="~/images/Archibishop2.png" class="figure-img img-fluid rounded" alt="A generic square placeholder image with rounded corners in a figure.">
        <figcaption class="figure-caption"><h3>Welcome to the Uganda AIDS Commission User Register SME Portal</h3></figcaption>
    </figure>
</div>

@section Scripts{
    <script type="text/javascript">
        app.controls.MENU_TO_ACTIVATE = "menu-home";
    </script>
}