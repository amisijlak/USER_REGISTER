<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - USER REGISTER Portal</title>
    <link href="~/css/devextreme/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/devextreme/dx.common.css" rel="stylesheet" />
    <link href="~/css/devextreme/dx.light.css" rel="stylesheet" />

    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="~/lib/datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/css/glyphicons.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/js/devextreme/jquery.js"></script>
    <script src="~/js/devextreme/jszip.js"></script>

    <script src="~/js/devextreme/dx.all.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
</head>
<body>
    <header>
        <div class="container">
            <div class="header-container">
                <div class="title">USER REGISTER Portal</div>
                <div class="sub-title">Uganda AIDS Commission</div>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" id="menu-home">
                            <a class="nav-link text-dark" href="@Url.Content(GlobalPageLinks.Index)"><i class="fa fa-home"></i> Home</a>
                        </li>
                        @inject ISessionService sessionService

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown" id="menu-settings">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-cogs"></i> Settings
                                </a>
                                <div class="dropdown-multi-div settings-options">
                                    <div class="dropdown-group">
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            <a class="dropdown-item" href="@Url.Content(GlobalPageLinks.AccountSystemUsers)"><i class="fa user-select-all"></i> System Users</a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                @if (ViewData["IsHomePage"] == null)
                {
                    <li class="breadcrumb-item"><a href="@Url.Content(GlobalPageLinks.Index)">Home</a></li>
                }
                @RenderSection("Breadcrumb", false)
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ol>
        </nav>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Today.Year - <a href="https://uac.go.ug/" target="_blank">About Us</a>
        </div>
    </footer>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/floatthead/jquery.floatThead.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js" data-auto-replace-svg="false"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script src="~/lib/datetimepicker/js/bootstrap-datetimepicker.min.js"></script>

    <script src="~/js/app/services/postback-service.js" asp-append-version="true"></script>
    <script src="~/js/app/services/crud-service.js" asp-append-version="true"></script>
    <script src="~/js/app/components/datagrid-helper.js" asp-append-version="true"></script>
    <script src="~/js/app/app-services.js" asp-append-version="true"></script>
    <script src="~/js/app/app-components.js" asp-append-version="true"></script>
    <script src="~/js/app/app-controls.js" asp-append-version="true"></script>
    <script src="~/js/app/app-dialogs.js" asp-append-version="true"></script>
    <script src="~/js/app/app-lookups.js" asp-append-version="true"></script>
    <script src="~/js/app/app-watched-collection.js" asp-append-version="true"></script>
    <script src="~/js/app/app-logic.js" asp-append-version="true"></script>
    <script src="~/js/app/app.js" asp-append-version="true"></script>
    <script src="~/js/template-manager.js" asp-append-version="true"></script>

    <partial name="_ValidationScriptsPartial" />
    <partial name="Controls/_SystemDialog" />

    <script type="text/javascript">
        $(function () {
            app.initialize();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
