@{
    var successMessage = this.Context.Request.Query[UIConstants.SuccessMessageFormField];
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="row">
        <div class="col-sm-6">
            <div class="alert alert-success">
                <a class="close" data-dismiss="alert" href="#" aria-hidden="true">&times;</a>
                <b>Success</b>
                <div>
                    @successMessage
                </div>
            </div>
        </div>
    </div>
}